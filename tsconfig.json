{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "dist/**",
    "node_modules/**",
    "tests/**"
  ],
  "include": [
    "src/**/*"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "browser",
      "c8",
      "dom",
      "es2022",
      "node"
    ]
  }
}